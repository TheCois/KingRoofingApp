<div id="equipmentadd" class="gridBlock inventory_page">
    <div class="head">
        Add/Edit Equipment
        @if (Convert.ToBoolean(ViewBag.EditMode))
        { 
        <a id="save-equipment" class="addLead_saveCancel" href="#">Save & Close</a>
        <a id="update-equipment" class="addLead_saveCancel" href="#">Update</a>
        }
        <a id="Cancel_PopAss" class="addLead_saveCancel" href="#">Cancel</a>
    </div>
    <div class="headSpacer"></div>
    <div id="errorMessages" style="width: 95%; margin-left: 20px; margin-right: 10px;">
        <div class="alert alert-success alert-dismissable" style="display:none;">
            <i class="fa fa-check"></i>
            <button class="close" onclick="$('.alert-success').hide()" type="button">×</button>
            <div id="dvSuccess"></div>
        </div>
        <div class="alert alert-danger alert-dismissable" style="display: none;">
            <i class="fa fa-ban"></i>
            <button class="close" onclick="$('.alert-danger').hide()" type="button">×</button>
            <div id="dvError"></div>
        </div>
    </div>
    <form id="frmEquipment">
        <div id="equipment-form" class="formHolder">
            <input type="hidden" id="equipment-id" />
            <input type="hidden" id="createdDate" />
            <div class="m_block">
                <div class="row">
                    <div class="colLeft">Name</div>
                    <div class="colRight">
                        <input type="text" id="equipmentname" class="inputText" maxlength="200" />
                    </div>
                </div>
                <div class="row">
                    <div class="colLeft">Equipment ID</div>
                    <div class="colRight">
                        <input type="text" id="equipment-equipmentid" class="inputText qty" maxlength="100" />
                    </div>
                </div>
                <div class="row">
                    <div class="colLeft">Model No.</div>
                    <div class="colRight">
                        <input type="text" id="modelno" class="inputText" maxlength="20" />
                    </div>
                </div>
                <div class="row">
                    <div class="colLeft">S/N</div>
                    <div class="colRight">
                        <input type="text" id="snno" class="inputText" maxlength="20" />
                    </div>
                </div>
                <div class="row">
                    <div class="colLeft">Vendor</div>
                    <div class="colRight">
                        <input type="text" id="vendor" class="inputText" maxlength="100" />
                    </div>
                </div>
            </div>
            <div class="m_block">
                <div class="row">
                    <div class="colLeft">Purchase Date</div>
                    <div class="colRight">
                        <input type="text" id="purchasedate" class="inputText qty" maxlength="100" />
                    </div>
                </div>
                <div class="row">
                    <div class="colLeft">Purchase Price</div>
                    <div class="colRight">
                        <input type="text" id="purchaseprice" class="inputText qty" maxlength="8" />
                    </div>
                </div>
                <div class="row">
                    <div class="colLeft">Purchase Location</div>
                    <div class="colRight">
                        <input type="text" id="purchaselocation" class="inputText" maxlength="100" />
                    </div>
                </div>
                <div class="row">
                    <div class="colLeft">Status</div>
                    <div class="colRight">
                        <select id="status" class="inputText" style="width: calc(100% - 15px)">
                            <option value="volvo">Please select</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="clear_fix"></div>
    <br /><br />
</div>
